generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // <--- QUAN TRỌNG: Phải có dòng này
}

model Store {
  id        String            @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name      String
  address   String?
  phone     String?

  code      String   @unique  // <-- Mã cửa hàng (VD: "HCM01"), bắt buộc unique
  timezone  String   @default("Asia/Ho_Chi_Minh") // <-- Múi giờ, mặc định VN
  isActive  Boolean  @default(true) @map("is_active") // <-- Trạng thái hoạt động (Open/Closed)

  createdAt DateTime          @default(now()) @map("created_at") @db.Timestamptz

  users            User[]            @relation("StoreUsers")
  inventoryLevels  InventoryLevel[]
  posSales         PosSale[]
  purchaseOrders   PurchaseOrder[]

  @@map("stores")
}

model Role {
  id    String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name  String  @unique
  description String?
  
  users User[]

  permissions Permission[] // <-- Quan hệ nhiều-nhiều (Implicit m-n relation của Prisma)

  @@map("roles")
}

model Permission {
  id          Int      @id @default(autoincrement())
  action      String   @unique // VD: "user.create", "store.view", "report.export"
  description String?  // Mô tả: "Cho phép tạo người dùng mới"
  
  roles       Role[]   // <-- Quan hệ ngược lại với Role
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
}

model User {
  id           String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  storeId      String?    @map("store_id") @db.Uuid
  roleId       String?    @map("role_id") @db.Uuid
  name         String
  email        String     @unique
  passwordHash String     @map("password_hash")
  
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz

  deletedAt DateTime? @map("deleted_at") // <-- Thời điểm xóa mềm. Null = Active

  store      Store?    @relation("StoreUsers", fields: [storeId], references: [id], onDelete: SetNull)
  role       Role?     @relation(fields: [roleId], references: [id])
  sales      PosSale[] @relation("CashierSales")
  auditLogs  AuditLog[]

  @@map("users")
}

model Product {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name        String
  description String?
  categoryId  String?   @map("category_id") @db.Uuid
  category    Category? @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz

  skus Sku[]

  @@map("products")
}

// 1. Thêm Model Category mới
model Category {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz

  // Relation: 1 Category có nhiều Products
  products    Product[]

  @@map("categories")
}

model Sku {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  productId String   @map("product_id") @db.Uuid
  skuCode   String   @map("sku_code") @unique
  barcode   String?  @unique
  unit      String
  cost      Decimal  @db.Decimal
  price     Decimal  @db.Decimal

  product          Product          @relation(fields: [productId], references: [id], onDelete: Cascade)
  inventoryLevels  InventoryLevel[]
  posLineItems     PosLineItem[]

  @@map("skus")
}

model InventoryLevel {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  storeId   String   @map("store_id") @db.Uuid
  skuId     String   @map("sku_id") @db.Uuid
  quantity  Int      @default(0)
  reserved  Int      @default(0)
  updatedAt DateTime @default(now()) @map("updated_at") @db.Timestamptz

  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)
  sku   Sku   @relation(fields: [skuId], references: [id], onDelete: Cascade)

  @@unique([storeId, skuId])
  @@map("inventory_levels")
}

model PosSale {
  id            String        @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  storeId       String?       @map("store_id") @db.Uuid
  cashierId     String?       @map("cashier_id") @db.Uuid
  totalAmount   Decimal       @map("total_amount") @db.Decimal
  paidAmount    Decimal?      @map("paid_amount") @db.Decimal
  paymentMethod String        @map("payment_method")
  createdAt     DateTime      @default(now()) @map("created_at") @db.Timestamptz

  store   Store?       @relation(fields: [storeId], references: [id])
  cashier User?        @relation("CashierSales", fields: [cashierId], references: [id])
  items   PosLineItem[]

  @@map("pos_sales")
}

model PosLineItem {
  id       String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  saleId   String  @map("sale_id") @db.Uuid
  skuId    String  @map("sku_id") @db.Uuid
  quantity Int
  price    Decimal @db.Decimal

  sale PosSale @relation(fields: [saleId], references: [id], onDelete: Cascade)
  sku  Sku     @relation(fields: [skuId], references: [id])

  @@map("pos_line_items")
}

model Supplier {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name      String
  email     String?
  phone     String

  address       String?
  taxCode       String?   @map("tax_code")
  contactPerson String?   @map("contact_person")
  note          String?

  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz

  deletedAt DateTime? @map("deleted_at") // <-- Soft delete cho nhà cung cấp

  purchaseOrders PurchaseOrder[]

  @@map("suppliers")
}

model PurchaseOrder {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  supplierId String? @map("supplier_id") @db.Uuid
  storeId   String?  @map("store_id") @db.Uuid
  status    String   @default("pending")
  totalCost Decimal  @default(0) @map("total_cost") @db.Decimal
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz

  supplier Supplier? @relation(fields: [supplierId], references: [id])
  store    Store?    @relation(fields: [storeId], references: [id])

  @@map("purchase_orders")
}

model AuditLog {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  userId    String?  @map("user_id") @db.Uuid
  action    String
  entity    String?
  entityId  String?  @map("entity_id") @db.Uuid
  detail    Json?    @db.JsonB
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz

  user User? @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

// Model lưu cấu hình hệ thống (Key-Value)
model SystemSetting {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  key         String   @unique // Ví dụ: 'default_tax', 'currency'
  value       String   // Giá trị lưu dưới dạng chuỗi
  type        String   // 'string', 'number', 'boolean', 'json'
  group       String   @default("GENERAL") // Để chia nhóm hiển thị trên UI (GENERAL, FINANCE...)
  description String?
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz

  @@map("system_settings")
}

// --- ENUM MỚI ---
enum DiscountType {
  PERCENTAGE // Giảm theo % (VD: 10%)
  FIXED_AMOUNT // Giảm số tiền cố định (VD: 50k)
}

// --- MODEL MỚI HOÀN TOÀN ---
model Promotion {
  id            Int          @id @default(autoincrement())
  code          String       @unique // Mã Coupon (VD: SUMMER2024)
  name          String       // Tên chương trình
  description   String?
  
  type          DiscountType // Loại giảm giá
  value         Decimal      // Giá trị giảm (10 hoặc 50000)
  
  startDate     DateTime     @map("start_date")
  endDate       DateTime     @map("end_date")
  
  minOrderValue Decimal?     @map("min_order_value") // Đơn tối thiểu để áp dụng
  maxDiscount   Decimal?     @map("max_discount")    // Giảm tối đa (cho loại %)
  
  isActive      Boolean      @default(true) @map("is_active")
  
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  @@map("promotions") // Tên bảng trong DB
}