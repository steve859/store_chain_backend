generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Store {
  id        String            @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name      String
  address   String?
  phone     String?
  createdAt DateTime          @default(now()) @map("created_at") @db.Timestamptz

  users            User[]            @relation("StoreUsers")
  inventoryLevels  InventoryLevel[]
  posSales         PosSale[]
  purchaseOrders   PurchaseOrder[]

  @@map("stores")
}

model Role {
  id    String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name  String  @unique

  users User[]

  @@map("roles")
}

model User {
  id           String     @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  storeId      String?    @map("store_id") @db.Uuid
  roleId       String?    @map("role_id") @db.Uuid
  name         String
  email        String     @unique
  passwordHash String     @map("password_hash")
  createdAt    DateTime   @default(now()) @map("created_at") @db.Timestamptz

  store      Store?    @relation("StoreUsers", fields: [storeId], references: [id], onDelete: SetNull)
  role       Role?     @relation(fields: [roleId], references: [id])
  sales      PosSale[] @relation("CashierSales")
  auditLogs  AuditLog[]

  @@map("users")
}

model Product {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name        String
  description String?
  category    String?
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz

  skus Sku[]

  @@map("products")
}

model Sku {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  productId String   @map("product_id") @db.Uuid
  skuCode   String   @map("sku_code") @unique
  barcode   String?  @unique
  unit      String
  cost      Decimal  @db.Decimal
  price     Decimal  @db.Decimal

  product          Product          @relation(fields: [productId], references: [id], onDelete: Cascade)
  inventoryLevels  InventoryLevel[]
  posLineItems     PosLineItem[]

  @@map("skus")
}

model InventoryLevel {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  storeId   String   @map("store_id") @db.Uuid
  skuId     String   @map("sku_id") @db.Uuid
  quantity  Int      @default(0)
  reserved  Int      @default(0)
  updatedAt DateTime @default(now()) @map("updated_at") @db.Timestamptz

  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)
  sku   Sku   @relation(fields: [skuId], references: [id], onDelete: Cascade)

  @@unique([storeId, skuId])
  @@map("inventory_levels")
}

model PosSale {
  id            String        @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  storeId       String?       @map("store_id") @db.Uuid
  cashierId     String?       @map("cashier_id") @db.Uuid
  totalAmount   Decimal       @map("total_amount") @db.Decimal
  paidAmount    Decimal?      @map("paid_amount") @db.Decimal
  paymentMethod String        @map("payment_method")
  createdAt     DateTime      @default(now()) @map("created_at") @db.Timestamptz

  store   Store?       @relation(fields: [storeId], references: [id])
  cashier User?        @relation("CashierSales", fields: [cashierId], references: [id])
  items   PosLineItem[]

  @@map("pos_sales")
}

model PosLineItem {
  id       String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  saleId   String  @map("sale_id") @db.Uuid
  skuId    String  @map("sku_id") @db.Uuid
  quantity Int
  price    Decimal @db.Decimal

  sale PosSale @relation(fields: [saleId], references: [id], onDelete: Cascade)
  sku  Sku     @relation(fields: [skuId], references: [id])

  @@map("pos_line_items")
}

model Supplier {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name      String
  email     String?
  phone     String?
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz

  purchaseOrders PurchaseOrder[]

  @@map("suppliers")
}

model PurchaseOrder {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  supplierId String? @map("supplier_id") @db.Uuid
  storeId   String?  @map("store_id") @db.Uuid
  status    String   @default("pending")
  totalCost Decimal  @default(0) @map("total_cost") @db.Decimal
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz

  supplier Supplier? @relation(fields: [supplierId], references: [id])
  store    Store?    @relation(fields: [storeId], references: [id])

  @@map("purchase_orders")
}

model AuditLog {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  userId    String?  @map("user_id") @db.Uuid
  action    String
  entity    String?
  entityId  String?  @map("entity_id") @db.Uuid
  detail    Json?    @db.JsonB
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz

  user User? @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}
